<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
    Permissions required for instrumented tests that interact with
    Android's CalendarContract provider.

    These are declared here (in the test manifest) so that GrantPermissionRule
    can grant them at runtime during tests.
    -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
</manifest>